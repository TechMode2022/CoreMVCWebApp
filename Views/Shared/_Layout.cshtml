
<!DOCTYPE html>




<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CoreMVCWebApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CoreMVCWebApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
      @*  @Html.Partial("_MenuBar")
        @* OR *@

        @{
            await Html.RenderPartialAsync("_MenuBar");
        }

        @* OR *@

        @{
             //Html.RenderPartial("_MenuBar");
        }


    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @if(IsSectionDefined("LeftSection"))
    {
        @RenderSection("LeftSection",required:false)
    }


    <footer class="border-top footer text-muted">

        @{
            await Html.RenderPartialAsync("_FooterBar");
        }

    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    @if (IsSectionDefined("LeftSection"))
    {
        @RenderSection("LeftSection")
    }

</body>
</html>
